<Container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../OrbitSchema.xsd">
    <List Items="~strings" AnchorPreset="FillParent" PivotY="1" SizeDeltaY="-30" ScrollSensitivity="15">
        <Text AnchorPreset="FillParent" Text="~this" FontSize="26"/>
        <Button Text="X" AnchorPreset="RightAlign" SizeDeltaX="30" ClickEvent="RemoveString"/>
    </List>
    <Horizontal AnchorPreset="BottomAlign" SizeDeltaY="30" ChildControlWidth="true" ChildControlHeight="true">
        <InputField BoundValue="enteredText" FlexibleWidth="1000"/>
        <ButtonGroup Spacing="2" PreferredWidth="250">
            <Background ImageColor="grey"/>
            <Button Text="Add" ClickEvent="AddString" PreferredWidth="100"/>
            <Button Text="Clear" ClickEvent="ClearStrings"/>
        </ButtonGroup>
    </Horizontal>
</Container>